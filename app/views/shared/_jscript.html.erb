<script type="text/javascript">
  $(document).ready( function(){
    Initialize();
    });
    
  function Initialize() {
    Home();
    Navigation();
    };
    
  function Navigation(){
    $("li.pr").mouseover(function(){
      $("li.pr").css({"background-color":"#dfd", "color":"#343"});
      });
    $("li.pr").click(function(){
      Projects();
      });
    $("li.pr").mouseleave(function(){
      $("li.pr").css({"background-color":"#efe", "color":"#fff"});
      });
      
    $("li.ab").mouseover(function(){
      $("li.ab").css({"background-color":"#dfd", "color":"#343"});
      });
    $("li.ab").click(function(){
      About();
      });
    $("li.ab").mouseleave(function(){
      $("li.ab").css({"background-color":"#efe", "color":"#fff"});
      });
      
    $("li.dr").mouseover(function(){
      $("li.dr").css({"background-color":"#dfd", "color":"#343"});
      });
    $("li.dr").click(function(){
      Employees();
      });
    $("li.dr").mouseleave(function(){
      $("li.dr").css({"background-color":"#efe", "color":"#fff"});
      });
      
    $("li.ho").mouseover(function(){
      $("li.ho").css({"background-color":"#dfd", "color":"#343"});
      });
    $("li.ho").click(function(){
      Home();
      });
    $("li.ho").mouseleave(function(){
      $("li.ho").css({"background-color":"#efe", "color":"#fff"});
      });  
    };
    
  function Projects(){
    $("div.about").hide();
    $("div.home").hide();
    $("div.employees").hide();
    
    $("div.projects").show("medium");
    
    <% for k in 0..projects.count-1 %>
      <% project = projects[k] %>
       $("div.img_text_<%= k %>").css({
         "opacity":"0",
         "color":"#aaa"
         });
    <% end %>
    
    <% for j in 0..projects.count-1 %>
      <% project = projects[j] %>
      $("div.img_img_<%= j %>").mouseover( function(){
        $("div.img_img_<%= j %>").css({"opacity":"0.3"});
        $("div.img_text_<%= j %>").css({"opacity":"1", "color":"#aaa"});
        });
      $("div.img_img_<%= j %>").mouseleave( function(){
        $("div.img_img_<%= j %>").css({"opacity":"1"});
        $("div.img_text_<%= j %>").css({"opacity":"0"});
        });
    <% end %>
    };
    
  function About(){
    $("div.home").hide();
    $("div.projects").hide();
    $("div.employees").hide();
    
    $("div.about").show("medium");
    };
  
  function Employees(){
    $("div.about").hide();
    $("div.projects").hide();
    $("div.home").hide();
    
    $("div.employees").show("medium");
    
    <% for k in 0..employees.count-1 %>
      <% employee = employees[k] %>
       $("div.img_text_<%= k %>").css({
         "opacity":"0",
         "color":"#aaa"
         });
    <% end %>
    
    <% for j in 0..employees.count-1 %>
      <% employee = employees[j] %>
      $("div.img_img_<%= j %>").mouseover( function(){
        $("div.img_img_<%= j %>").css({"opacity":"0.3"});
        $("div.img_text_<%= j %>").css({"opacity":"1", "color":"#aaa"});
        });
      $("div.img_img_<%= j %>").mouseleave( function(){
        $("div.img_img_<%= j %>").css({"opacity":"1"});
        $("div.img_text_<%= j %>").css({"opacity":"0"});
        });
    <% end %>
    };
    
  function Home(){
    $("div.about").hide();
    $("div.projects").hide();
    $("div.employees").hide();
    
    $("div.home").show("medium");
    
    $("li.cloud_employees").hide();
    $("li.ml_projects").hide();
    $("li.moon_about").hide();
    $("li.ds_home").hide();
    
    $("li.home").animate({opacity:0.6});
    $("li.employees").animate({opacity:0.6});
    $("li.about").animate({opacity:0.6});
    $("li.projects").animate({opacity:0.6});
    
    $("li.projects").mouseover( function(){
      $("li.moon_about").hide("slow");
      $("li.cloud_employees").hide("slow");
      $("li.ds_home").hide("slow");
      
      $("li.ml_projects").show("slow");
      $("li.projects").animate({opacity:1});
      });
    $("li.projects").click( function(){
      Projects();
      });
    $("li.projects").mouseleave( function(){
      $("li.ml_projects").hide("slow");
      $("li.projects").animate({opacity:0.6});
      });
    
    $("li.about").mouseover( function(){
      $("li.ml_projects").hide("slow");
      $("li.cloud_employees").hide("slow");
      $("li.ds_home").hide("slow");
      
      $("li.moon_about").show("slow");
      $("li.about").animate({opacity:1});
      });
    $("li.about").click( function(){
      About();
      });
    $("li.about").mouseleave( function(){
      $("li.moon_about").hide("slow");
      $("li.about").animate({opacity:0.6});
      });
    
    $("li.employees").mouseover( function(){
      $("li.moon_about").hide("slow");
      $("li.ds_home").hide("slow");
      $("li.ml_projects").hide("slow");
      
      $("li.cloud_employees").show("slow");
      $("li.employees").animate({opacity:1});
      });
    $("li.employees").click(function(){
      Employees();
      });
    $("li.employees").mouseleave( function(){
      $("li.cloud_employees").hide("slow");
      $("li.employees").animate({opacity:0.6});
      });
      
    $("li.home").mouseover( function(){
      $("li.cloud_employees").hide("slow");
      $("li.ml_projects").hide("slow");
      $("li.moon_about").hide("slow");
      
      $("li.ds_home").show("slow");
      $("li.home").animate({opacity:1});
      });
    $("li.home").click( function(){
      Home();
      });
    $("li.home").mouseleave( function(){
      $("li.ds_home").hide("slow");
      $("li.home").animate({opacity:0.6});
      });
    };
    
</script>
